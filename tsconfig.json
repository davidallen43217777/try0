{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "noEmit": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}